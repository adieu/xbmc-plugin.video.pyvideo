<?xml version="1.0" encoding="UTF-8"?>
<addon
    id="plugin.video.pyvideo"
    version="1.0.0"
    name="PyVideo"
    provider-name="nevermore">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="plugin.video.youtube" version="2.0.0"/>
    <import addon="script.module.beautifulsoup" version="3.0"/>
  </requires>
  
  <extension point="xbmc.python.pluginsource" library="pyvideo.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="de">pyvideo.org</summary>
    <summary lang="en">pyvideo.org</summary>
    <description lang="de">
      Aufzeichnungen internationaler Python Konferenzen.
    </description>
    <description lang="en">
      Recordings of international conferences related to the Python
      programming language.
    </description>
    <disclaimer lang="en">Videos from pyvideo.org</disclaimer>
  </extension>
</addon>
